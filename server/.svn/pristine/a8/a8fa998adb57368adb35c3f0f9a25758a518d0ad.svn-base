    public class CalorCommonwealth : Commonwealth
    {
        private static Commonwealth mInstance;

        public static Commonwealth Instance { get { return mInstance; } }

        public override Point3D TownStoneLocation { get { return new Point3D(998, 1886, 0); } }

        public override Point3D[] StrongholdDestructableDoorLocations
        {
            get
            {
                //first two are linked hero doors (capture), last two are the cell doors (rescue)
                return new Point3D[] { new Point3D(5861, 3899, 0), new Point3D(5862, 3899, 0), new Point3D(5868, 3897, 0), new Point3D(5868, 3892, 0)  };
            }
        }

        public override Point3D HeroGoLocation
        {
            get
            {
                return new Point3D(5860, 3892, 0);
            }
        }

        public override Point3D[] CapturedHeroGoLocations
        {
            get
            {
                return new Point3D[] { new Point3D(5866, 3897, 0), new Point3D(5866, 3892, 0) };
            }
        }
        public CalorCommonwealth()
        {
            mInstance = this;

            Definition = new CommonwealthDefinition(3, "Calor", "Calor");
        }
    }
